		<script>

			if(cockpit == undefined)
				cockpit = new Cockpit();

			$( document ).on( 'click', '.workbench', function()
			{
				if(cockpit.hasWorkbench() && !cockpit.workbench.isOpen)
				{
					cockpit.workbench.open();
				}
				else if(cockpit.hasWorkbench() && cockpit.workbench.isOpen)
				{
					cockpit.workbench.close();
				}
				else if(cockpit.workbench.status == 'under_construction')
				{
					console.log('still under construction');
				}
				else if(cockpit.workbench.status == 'construction_complete')
				{
					cockpit.setWorkbenchStatus('active');
					sendWorkbenchStatus('active');
				}
				else if(!cockpit.hasWorkbench())
				{
					console.log('buy workbench');
					cockpit.buyWorkbench();
				}
			});

			$( document ).on( 'click', '.lab', function()
			{
				if(cockpit.hasLab() && !cockpit.lab.isOpen)
				{
					cockpit.lab.open();
				}
				else if(cockpit.hasLab() && cockpit.lab.isOpen)
				{
					cockpit.lab.close();
				}
				else if(cockpit.lab.status == 'under_construction')
				{
					console.log('still under construction');
				}
				else if(cockpit.lab.status == 'construction_complete')
				{
					cockpit.lab.setStatus('active');
					sendLabStatus('active');
				}
				else if(!cockpit.hasLab())
				{
					console.log('buy lab');
					cockpit.lab.buy();
				}
			});

			$( document ).on( 'click', '#canon', function()
			{
				if(cockpit.canon.status == 'under_construction')
				{
					console.log('still under construction');
				}
				else if(cockpit.canon.status == 'construction_complete')
				{
					cockpit.setCanonStatus('active');
					sendCanon('active', cockpit.canon.capacity);
				}
				else if(!cockpit.hasCanon())
				{
					console.log('buy canon');
					cockpit.buyCanon();
				}
			});

			var canon_capacity_upgrade = null;

			$( document ).on( 'click', '#canon-upgrades-infos > .buyable', function()
			{
				console.log('click on canon capacity upgrade', canon_capacity_upgrade);

				if(canon_capacity_upgrade == null)
				{
					canon_capacity_upgrade = cockpit.lab.canon_capacity_upgrades.shift();

