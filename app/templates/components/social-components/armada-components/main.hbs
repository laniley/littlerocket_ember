    {{#if showSuggestions}}
      <div class="button back" {{action 'closeSuggestions'}}>{{fa-icon 'chevron-left'}} Back</div>
      <div class="list-item flex-container center-y">
        <div class="name label">Name</div>
        <div class="members label">Members</div>
      </div>
    {{/if}}
  {{/if}} --}}
