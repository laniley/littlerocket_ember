<div class="title">
  {{#link-to 'index' (query-params player_hud_section="rocket")}}
    <div class={{if (if-equals currentSection 'rocket') 'active item' 'item' }}>
      {{unbound (fa-icon "fa-rocket")}}
    </div>
  {{/link-to}}
  {{#if (if-equals me.user.lab.status 'unlocked') }}
    {{#link-to 'index' (query-params player_hud_section="lab")}}
      <div class={{if (if-equals currentSection 'lab') 'active item' 'item' }}>
        {{unbound (fa-icon "fa-flask")}}
      </div>
    {{/link-to}}
  {{else}}
    {{#if (if-equals me.user.lab.status 'under_construction') }}
      <div class="item">
        <span id="lab-tab" class="fa-stack">
          {{unbound (fa-icon "fa-flask" stack=1)}}
          {{timer-component type='lab-tab' component=me.user.lab}}
        </span>
      </div>
    {{else}}
      <div class="item" {{action 'buyLab'}}>
        <span class="fa-stack">
          {{unbound (fa-icon "fa-flask" stack=1)}}
          {{#tooltip-component tooltip=me.user.lab.tooltip}}
            {{unbound (fa-icon "fa-lock locked" stack=1)}}
          {{/tooltip-component}}
        </span>
      </div>
    {{/if}}
  {{/if}}
  {{#tooltip-component tooltip="Achievements are coming soon..."}}
    <div class='item coming_soon'>
      <span class="fa-stack">
        {{unbound (fa-icon "fa-circle-o" stack=1)}}
        {{unbound (fa-icon "fa-star" stack=1)}}
      </span>
    </div>
  {{/tooltip-component}}
</div>

<div class="info-prompt">
  {{#if show_not_enough_stars_alert}}
    {{#prompt-component}}
  		Not enough stars!
  	{{/prompt-component}}
  {{/if}}
</div>

{{#if me.isLoggedIn}}
  <div class="content">

    {{#if (if-equals currentSection 'rocket') }}
      {{cockpit-component
          me=me
          currentSection=currentCockpitSection
          currentLabSection=currentLabSection}}
    {{else}}
    {{/if}}

  </div>
{{else}}
  <div class="login-info">
    <div>{{unbound (fa-icon "fa-lock")}}</div>
    <div>Please log in.</div>
  </div>
{{/if}}
