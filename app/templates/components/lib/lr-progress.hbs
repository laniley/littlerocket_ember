{{#if withExpLevel}}
  {{#if expLevelCurrent}}
    <div class="lr-progress__points lr-progress__points__left">{{expLevelCurrent}}</div>
  {{else}}
    <div class="lr-progress__points lr-progress__points__left">
      {{fa-icon "spinner" spin=true}}
    </div>
  {{/if}}
{{/if}}
<div class="lr-progress__bar">
  <div class="lr-progress__bar__progress" style={{barWidth}}></div>
  <div class="lr-progress__bar__text {{if inProgress 'lr-progress__bar__text--in-progress'}}">
    {{reached}}<span class="lr-progress__bar__divided-sign">/</span>{{total}}
  </div>
</div>
{{#if withAchievementPoints}}
  <div class="lr-progress__points">{{achievementPoints}}</div>
{{/if}}
{{#if withExpLevel}}
  {{#if expLevelCurrent}}
    <div class="lr-progress__points">{{math expLevelCurrent "+" 1}}</div>
  {{else}}
    <div class="lr-progress__points lr-progress__points__left">
      {{fa-icon "spinner" spin=true}}
    </div>
  {{/if}}
{{/if}}
